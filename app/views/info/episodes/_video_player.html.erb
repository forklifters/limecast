<% options ||= {} -%>
<% episode = video_player -%>
<% source  = episode.sources.with_screenshot.with_preview.first -%>
<% javascript_include "video_preview" -%>

<%- if source -%>
  <div class="container">
    <%= image_tag(source.screenshot.url, {:rel => source.preview.url, :alt => "#{episode.title} cover art"}) -%>
  </div>
<%- else -%>
  <%= blankness -%>
<%- end -%>
