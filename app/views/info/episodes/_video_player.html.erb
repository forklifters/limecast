<% options ||= {} -%>
<% source ||= video_player -%>
<% attrs ||= {} %>
<% attrs.reverse_merge! :rel => (source.preview.url), 
                        :poster => source.screenshot.url, 
                        :width => source.width, :height => source.height if source %>
<% (attrs[:class] ||= "") << " container" %>
<% javascript_include "video_preview" -%>

<%- if source -%>
  <%= content_tag :div, "", attrs  %>
<%- else -%>
  <%= blankness -%>
<%- end -%>
