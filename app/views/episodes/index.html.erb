<% @title = "#{h(@podcast.custom_title)} Episodes" -%>
<% @show_ads = true -%>

<div class="podcast">

  <div class="cover">
    <div class="border"></div>
    <%= image_tag(@podcast.logo.url(:small), :class => 'reflect rheight30 ropacity15') -%>
  </div>

  <% if @podcast -%>
    <h1 class="heading">Episodes for <%=h @podcast.custom_title -%></h2>
  <% else -%>
    <h2>All episodes</h2>
  <% end -%>
  
  <ul class="episodes">
    <%= render :partial => "episodes/episode", :collection => @episodes -%>
  </ul>
</div>
<% reset_cycle('row_class') %>
