<%- format = download_button_options -%>
<li>
  <p><%= podcasts_label_from_format(format[0]) -%></p>
  <span class="v_options">
    <% delimited_items(format[1], "|") do |source, delimiter| -%>
      <%= link_to default_bitrate_label(source.podcast.bitrate), source.url,
            :id    => "podcast_#{source.podcast.id}",
            :title => [source.resolution, "bitrate: #{source.podcast.formatted_bitrate}"].compact.join(" | ") -%>
      <%= link_to source.magnet_url, source.magnet_url, :id => "podcast_#{source.podcast.id}_magnet", :style => "display:none;" -%>
      <%= delimiter -%>
    <% end %>
  </span>
</li>
