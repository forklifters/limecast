<% options ||= {} -%>
<% episode = video_player -%>
<% source  = episode.sources.first -%>
<%- if source && source.screenshot? && source.preview? -%>
  <div class="container">
    <%= image_tag(source.screenshot.url, {:rel => source.preview.url, :alt => "#{episode.title} cover art"}) -%>
  </div>
<%- end -%>
