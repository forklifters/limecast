<% if @user.new_record? -%>
  { success: false,
    html: "<%= escape_javascript create_user_error(@user) -%>" }
<% else -%>
  { success: true,
    html: "Successful signup, <%= escape_javascript link_to_profile(current_user) -%>.",
    profileLink: "<%= escape_javascript render(:partial => "layouts/sign_in_area") %>" }
<% end -%>
