<% @title = "Favoriters" -%>
<% @full_width = true   -%>

<div class="page_head">
	<h1>8 people have favorited <%= link_to @podcast.title, podcast_url(:podcast_slug => @podcast) -%></h1>
</div>

<div id="favoriters" class="rounded_corners">
  <% rounded_corners do -%>
    <ul class="users">
      <%= render :partial => 'users/user', :collection => @users -%>
    </ul>
  <% end -%>
</div>
<div class="googleads">
  <%= @ads -%>
  <%= @ads -%>
</div>