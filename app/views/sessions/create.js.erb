<% unless logged_in? %>
  { success: false,
    html: "<%= escape_javascript create_session_error(params) -%>" }
<% else -%>
  { success: true, 
    html: "Successful signin, <%= escape_javascript link_to_profile(current_user) -%>.",
    profileLink: "<%= escape_javascript render(:partial => 'sessions/auth') %>" }
<% end -%>
