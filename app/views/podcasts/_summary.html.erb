<div class="summary">

  <h1><%=h @podcast.custom_title %></h1>
  <h6 id="page_type">VIDEO PODCAST SERIES</h6>

  <div class="preview">
    <%= image_tag(@podcast.logo.url(:small), :alt => "#{@podcast.custom_title} cover art", :class => "logo") -%>
  </div>

  <div class="description">
    <div id="s_desc">
      <p class="favorite">
        <% if current_user && current_user.favorite_podcasts.include?(@podcast) -%>
          <a href="#"><span class="is favorite">Marked as favorite</span></a>
        <% else -%>
          <%= link_to '<span class="add favorite">Add to favorites</span>',
                favorite_podcast_url(:podcast => @podcast.clean_url) -%>
        <% end -%>
      </p>
      <h4>Series description</h4>
      <p>
        <%= link_to h(@podcast.clean_site), h(@podcast.site) %> - <%= unescape_entities h(@podcast.description) -%>
      </p>
      <h6>Tags:</h6>
      <ul>
        <%= comma_separated_list_items(@podcast.tags.map {|tag| link_to(tag.name, tag_url(:tag => tag.name)) }) -%>
      </ul>
    </div> <!-- /s_desc -->

    <div id="subscribe" style="background: url('../imgs/subscribe_itunes.png') top left no-repeat;">
      <div>
        <a href="#">
          <h2>Subscribe</h2>
          <p>iTunes <span>(Qt - small)</span></p>
        </a>
      </div>
    </div>

    <div id="social">
      <ul>
        <%- if @podcast.found_by -%>
          <li><%= link_to "First found by <span>#{@podcast.found_by.login}</span>" -%></li>
        <%- end -%>
        <%- if @podcast.owned_by -%>
          <li><%= link_to "Owned by <span>#{@podcast.owned_by.login}</span>" -%></li>
        <%- end -%>
        <li><a href="#">Marked as favorite by <span><%= pluralize(@podcast.favorites.count, "person") -%></span></a></li>
      </ul>
    </div>

  </div><!-- /description -->

</div> <!-- /s_subscribe -->
