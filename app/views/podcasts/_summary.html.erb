<div class="summary">

  <h1><%=h @podcast.custom_title %></h1>
  <h6 id="page_type">VIDEO PODCAST SERIES</h6>

  <div class="preview">
    <%= image_tag(@podcast.logo.url(:small), :alt => "#{@podcast.custom_title} cover art", :class => "logo") -%>
  </div>

  <div class="description">
    <div id="s_desc">
      <p class="favorite">
        <% if current_user && current_user.favorite_podcasts.include?(@podcast) -%>
          <a href="#"><span class="is favorite">Marked as favorite</span></a>
        <% else -%>
          <%= link_to '<span class="add favorite">Add to favorites</span>',
                favorite_podcast_url(:podcast => @podcast.clean_url) -%>
        <% end -%>
      </p>
      <h4>Series description</h4>
      <p>
        <%= link_to h(@podcast.clean_site), h(@podcast.site) %> - <%= unescape_entities h(@podcast.description) -%>
      </p>
      <h6>Categories:</h6>
      <ul>
        <%= comma_separated_list_items(@podcast.tags.map {|tag| link_to(tag.name, tag_url(:tag => tag.name)) }) -%>
      </ul>
    </div>

    <div class="cbb" id="s_options">
      <h2>Subscribe</h2>
      <h6>Through an application:</h6>
      <ul>
        <li><a href="#" id="itune" class="icon">iTunes</a></li>
        <li><a href="#" id="miro" class="icon">miro</a></li>
      </ul>
      <h6 class="tm">With an RSS feed:</h6>
      <ul id="v_options">
        <li>
        <a href="#" class="icon rss">Flash</a>
        <span class="v_options">
          <a href="#" title="1024x760 | bitrate: 1.6meg">Large</a> | <a href="#" title="1024x760 | bitrate: 1.6meg">Small</a>
        </span>
        </li>

        <li>
        <a href="#" class="icon rss">MP3</a>
        <span class="v_options">
          <a href="#" title="1024x760 | bitrate: 1.6meg">High</a>
        </span>
        </li>

        <li>
        <a href="#" class="icon rss">Quicktime</a>
        <span class="v_options">
          <a href="#" title="1024x760 | bitrate: 1.6meg">HD</a> | <a href="#" title="1024x760 | bitrate: 1.6meg">Large</a> | <a href="#" title="1024x760 | bitrate: 1.6meg">Small</a>
        </span>
        </li>

        <li>
        <a href="#" class="icon rss">WMV</a>
        <span class="v_options">
          <a href="#" title="1024x760 | bitrate: 1.6meg">Large</a> | <a href="#" title="1024x760 | bitrate: 1.6meg">Small</a>
        </span>
        </li>

        <li>
        <a href="#" class="icon rss">XVID</a>
        <span class="v_options">
          <a href="#" title="1024x760 | bitrate: 1.6meg">Large</a> | <a href="#" title="1024x760 | bitrate: 1.6meg">Small</a>
        </span>
        </li>
      </ul>
    </div>

    <div id="social">
      <ul>
        <%- if @podcast.found_by -%>
          <li><%= link_to "First found by <span>#{@podcast.found_by.login}</span>" -%></li>
        <%- end -%>
        <%- if @podcast.owned_by -%>
          <li><%= link_to "Owned by <span>#{@podcast.owned_by.login}</span>" -%></li>
        <%- end -%>
        <li><a href="#">Marked as favorite by <span><%= pluralize(@podcast.favorites.count, "person") -%></span></a></li>
      </ul>
    </div>

  </div><!-- /bottom_border -->

</div> <!-- /s_subscribe -->
