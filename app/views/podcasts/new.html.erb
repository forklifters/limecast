<% @title = "Add Podcast" -%>
<% javascript_include "podcasts_new" -%>
<% @full_width = true -%>
<% @classes = %{show addpage} -%>
<div class="summary">
  <div class="page_head">
    <h1>Add new podcasts to LimeCast</h1>
    <p>Know the address of a podcast <a href="#" title="Really Simple Syndication">RSS</a> feed? Add it to LimeCast:</p>
  </div>
  

  <div id="added_podcast_list"></div>
  

  <form method="post" id="new_podcast" action="/podcasts">
    <% if protect_against_forgery? -%>
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token -%>" />
    <% end -%>
 
      
      <div>
        <label for="feed[url]">http://example.com/rss.xml</label>
        <input type="text" class="text" id="feed_url" name="feed[url]" value="http://example.com/rss.xml" />
        <button type="submit" class="addme">
          <span>Feed me!</span>
        </button>
 
      </div>

  </form>

  <div id="added_podcast" style="display: none;">
    <form>

      
        <div>
          <input type="text"   class="text add_disabled"   readonly="readonly" />
          <input type="submit" class="button" readonly="readonly" value="Feed me?" />
        </div>

    </form>
    <div class="status">
      <%= render :partial => 'feeds/status_loading' -%>
    </div>
  </div>

  <% if !logged_in? -%>
    <div class="quick_signin_container after_adding_podcast"></div>
  <% end -%>
</div>
