<form method="get" action="<%= feeds.first.url if feeds.first -%>" class="super_button subscribe">
  <select class="item">
    <%= options_for_select(feeds.parsed.map {|f| [super_button_delivery(f), f.id] }) -%>
  </select>

  <% feeds.select {|f| !f.itunes_link.blank? }.each do |feed| -%>
  <input type="hidden" id="itunes_<%= feed.id %>" value="<%= feed.itunes_link %>" />
  <% end -%>

  <% feeds.each do |feed| -%>
  <input type="hidden" id="url_<%= feed.id %>" value="<%= feed.url %>" />
  <% end -%>
  
  <select class="delivery">
    <option value="rss">RSS</option>
    <option value="miro">Miro</option>
    <option value="itunes" class="itunes">iTunes</option>
  </select>
  
  <%= link_to "Subscribe", "#", :class => 'super_button_subscribe' %>
</form>

