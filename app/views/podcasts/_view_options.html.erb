<div id="view_options">
  <div id="sort">
    Sort by: <%= dropdown [["Most recent","recent"], ["First to last","oldest"]], nil, {} %>
  </div>
  <p>
    View:
    <a href="#"><img src="imgs/columns_on.png" alt="Columns view" /></a>
    <a href="#"><img src="imgs/grid_off.png" alt="Grid view" /></a>
  </p>
  <p class="per_page">
    <% delimited_items([5, 10, 20, 50]) do |count, comma| -%>
      <%= link_to count, {:limit => count}, :class => ((params[:limit] || 5).to_i == count) ? "pp_current" : nil -%><%= comma -%>
    <% end -%>
    per page
  </p>
</div>
