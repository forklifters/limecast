<div class="description">
<div class="preview">
  <%= image_tag(@podcast.logo.url(:small), :alt => "#{@podcast.custom_title} cover art", :class => "logo") -%>
</div>


  <div class="s_desc">
     
    <h3><%= link_to @podcast.title, podcast_url(:podcast_slug => @podcast), :title => "Subscribe to the series & view the episode list" -%></h3>
    <p>
      <%= unescape_entities h(@podcast.description) -%>
      <a href="#" class="adjust">more</a>
    </p>
    <h6>Tags:</h6>
    <ul>
      <%= comma_separated_list_items(@podcast.tags.map {|tag| link_to(tag.name, tag_url(:tag => tag.name)) }) -%>
    </ul>
    
    <%= render :partial => "podcasts/social", :locals => {:podcast => @podcast} -%>
    
    
    <p class="favorite_cont">
        <% if @podcast.is_favorite_of?(current_user) -%>
          <a href="#" class="is favorite">Marked as favorite</a>
        <% else -%>
          <div class="addit"><ul><li><%= link_to 'Add to favorites', favorite_podcast_url(:podcast_slug => @podcast.clean_url) -%></li></ul></div>
        <% end -%>
      </p>
   
  </div>


  
  
  

</div>

