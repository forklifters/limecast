<% podcast = podcast_simple %>

<div class="description_simple clearfix">
  <div class="preview">
    <%= image_tag(podcast.logo.url(:icon), :alt => "#{podcast.title} cover art", :class => "logo") -%>
  </div>

  <div class="s_desc">
    <h3><%= link_to podcast.title, podcast_url(:podcast_slug => podcast), :title => "Subscribe to the series & view the episode list" -%></h3>
  </div>
</div>
