<div id="s_subscribe">

  <h1><%=h @podcast.custom_title %></h1>
  <h6 id="page_type">VIDEO PODCAST SERIES</h6>

  <%= image_tag(@podcast.logo.url(:small), :alt => "#{@podcast.custom_title} cover art", :class => "sm_img") -%>

  <div id="bottom_border">
    <div id="s_desc">
      <h4>Series description</h4>
      <p>
        <%= link_to h(@podcast.clean_site), h(@podcast.site) %> - <%= unescape_entities h(@podcast.description) -%>
      </p>
      <h6>Categories:</h6>
      <ul>
        <% @podcast.tags.each do |tag| -%>
          <li><%= link_to(tag.name, tag_url(:tag => tag.name)) -%>,</li>
        <% end -%>
      </ul>
    </div>

    <div class="cbb" id="s_options">
      <h2>Subscribe</h2>
      <h6>Through an application:</h6>
      <ul>
        <li><a href="#" id="itune" class="icon">iTunes</a></li>
        <li><a href="#" id="miro" class="icon">miro</a></li>
      </ul>
      <h6 class="tm">With an RSS feed:</h6>
      <ul id="v_options">
        <li>
        <a href="#" class="icon rss">Flash</a>
        <span class="v_options">
          <a href="#" title="1024x760 | bitrate: 1.6meg">Large</a> | <a href="#" title="1024x760 | bitrate: 1.6meg">Small</a>
        </span>
        </li>

        <li>
        <a href="#" class="icon rss">MP3</a>
        <span class="v_options">
          <a href="#" title="1024x760 | bitrate: 1.6meg">High</a>
        </span>
        </li>

        <li>
        <a href="#" class="icon rss">Quicktime</a>
        <span class="v_options">
          <a href="#" title="1024x760 | bitrate: 1.6meg">HD</a> | <a href="#" title="1024x760 | bitrate: 1.6meg">Large</a> | <a href="#" title="1024x760 | bitrate: 1.6meg">Small</a>
        </span>
        </li>

        <li>
        <a href="#" class="icon rss">WMV</a>
        <span class="v_options">
          <a href="#" title="1024x760 | bitrate: 1.6meg">Large</a> | <a href="#" title="1024x760 | bitrate: 1.6meg">Small</a>
        </span>
        </li>

        <li>
        <a href="#" class="icon rss">XVID</a>
        <span class="v_options">
          <a href="#" title="1024x760 | bitrate: 1.6meg">Large</a> | <a href="#" title="1024x760 | bitrate: 1.6meg">Small</a>
        </span>
        </li>
      </ul>
    </div>

    <div id="social">
      <ul>
        <li><a href="#">First found by <span>Kevin</span></a></li>
        <li><a href="#"><span>Marked as favorite by </span>23 people</a></li>
        <li><a href="#">Add to favorites</a></li>
      </ul>
    </div>

  </div><!-- /bottom_border -->

</div> <!-- /s_subscribe -->



<div id="s_episodes_reviews">

  <h2 class="linkable current">
    <span>Episodes</span>
    <a href="#">Episodes</a>
  </h2>
  <h2 class="linkable">
    <span>Series reviews (<%= @podcast.episodes.count %>)</span>
    <a href="#">Series reviews (<%= @podcast.episodes.count %>)</a>
  </h2>

  <div class="cbb" id="s_episodes" style="display: none">
    <div id="e_info">
      <p>
        <%= pluralize(@podcast.episodes.count, 'episode') -%>
        <span>since <%= @podcast.episodes.first.published_at.to_date -%> every <%= @podcast.average_time_between_episodes.to_i.to_duration -%></span>
      </p>
    </div>

    <div id="e_view">
      <p>View:<a href="#"><img src="imgs/columns_on.png" alt="Columns view" /></a><a href="#"><img src="imgs/grid_off.png" alt="Grid view" /></a></p>
      <ul>
        <% [5, 10, 20, 50].each do |count| -%>
          <li><%= link_to count, {:limit => count}, :class => ((params[:limit] || 5).to_i == count) ? "pp_current" : "" -%>,</li>
        <% end -%>
      </ul>
      <p id="sort">Sort by: <a href="#" class="options">Most recent</a></p>
    </div>

    <div id="dl_option_cont">
      <p>Choose download format (2 Steps):</p>
      <form action="http://limecast.com/search" method="get" id="dl_option">            
        <strong>1.</strong>
        <input class="text search" id="w" name="q" size="15" type="radio" /><label for="w">Web</label>
        <input class="text search" id="m" name="q" size="15" type="radio" /><label for="m">Magnet</label>
        <strong>2.</strong>
        <a href="#" class="options">Flash (small)</a>
      </form>
      <ul>
        <li><a href="#">help</a> | </li>
        <li><a href="#">hide</a></li>
      </ul>
    </div>

    <%= render :partial => "episodes/episode", :collection => @episodes -%>

    </div><!-- /s_episodes -->
    
    <div class="cbb" id="s_reviews" style="display: ;none">
      <div id="e_info">
        <p>
          <%= pluralize(@podcast.episodes.count, 'episode') -%>
          <span>since <%= @podcast.episodes.first.published_at.to_date -%> every <%= @podcast.average_time_between_episodes.to_i.to_duration -%></span>
        </p>
      </div>

      <div id="r_view">
        <p>View:
          <span class="linkable current">
            <%= link_to "All (#{@podcast.reviews.count})", reviews_url(:podcast => @podcast) %>
            <span>All (38)</span>
          </span>
          <span class="linkable">
            <%= link_to "Positive (#{@podcast.reviews.that_are_positive.count})", positive_reviews_url(:podcast => @podcast) %>
            <span>Positive (36)</span>
          </span>
          <span class="linkable">
            <%= link_to "Negative (#{@podcast.reviews.that_are_negative.count})", negative_reviews_url(:podcast => @podcast) %>
            <span>Negative (2)</span>
          </span>
        </p>
      </div>

      <%= render :partial => 'reviews/reviews', :objects => {:reviews => @reviews} %>
      <%#= render :partial => 'reviews/review', :collection => @reviews -%>

      </div><!-- /s_reviews -->

  </div> <!-- /s_episodes_reviews -->
