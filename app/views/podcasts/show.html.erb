<% @classes = %{podcast show} -%>
<% @title = h(@podcast.title) -%>
<% @show_ads = true -%>
<% stylesheet_link "sknd.global", "sknd.presentation", "sknd.typography", "sknd.icons", "podcast_show" -%>
<% javascript_include "review_edit", "review_delete", "podcasts_new", "podcast_edit", "review_ratings_new" -%>

<script type="text/javascript">
  $().ready(function() {
    $('.description > p').jTruncate({  
      length: 400,  
    });  
    <% if params[:controller] == 'reviews' -%>$(".tabify a[href='#podcast_reviews']").click();<% end -%>
  });
</script>


<div class="summary">
  <%= render :partial => 'podcasts/summary' -%>
</div>
<div class="clear"></div>

<div class="tabify main">
  
  <ul>
      <li><a href="#podcast_episodes"><h4>Episodes <span>(<%= @podcast.episodes.count -%>)</span></h4></a></li>
      <li><a href="#podcast_reviews"><h4>Reviews <span>(<%= @podcast.reviews.count %>)</span></h4></a></li>
  </ul>
  
  <% form_for :search, :url => search_url, :html => {:method => :get, :class => "search", :id => "podcast_search"} do |form| -%>
     <%= hidden_field_tag :podcast, @podcast.clean_url %>
     <label for="search_podcast_q" class="default search">Search in <%= @podcast.title %>&hellip;</label>
     <%= text_field_tag "q", params[:q], :id => "search_podcast_q" %>
     <button type="submit">
       <span>Search</span>
     </button>
   <% end -%>

  
  
      

  <div id="podcast_episodes">
    <%= render :partial => 'episodes/episodes', :object => @episodes, :locals => {:podcast => @podcast} %>
  </div>
  
  <div id="podcast_reviews">
    <%= render :partial => 'reviews/reviews', :object => @podcast.reviews, :locals => {:podcast => @podcast} %>
  </div>



</div>

<div id="series_page_goog">
  <div class="googleads">
    <%= @ads -%>
  </div>
</div>

<div class="related rounded_corners">
  <% rounded_corners do -%>
  <h3>Related podcasts</h3>
  <ul id="all_podcasts">
    <% @related.each do |podcast| -%>
     <li id="<%=h dom_id(podcast) -%>" class="podcast">
       <%= image_tag podcast.logo.url(:icon) %> <%= link_to podcast.title, podcast_url(:podcast_slug => podcast) -%>
     </li>
    <% end -%>
  </ul>
  <% end -%>
</div>