<% @title = "Popular Podcasts" -%>
<% @full_width = true -%>
<% @classes = %{popular} -%>

<div class="summary">
  <h1>Popular podcasts</h1>

  <% rounded_corner_tag(:id => 'browse', :class => 'main rounded_corners') do -%>
    <%= paginate_podcasts(@podcasts) -%>
  
    <%= render :partial => 'podcasts/podcast', :collection => @podcasts -%>

    <%= paginate_podcasts(@podcasts) -%>
  <% end -%>
    

</div>



<%= google_ads -%>
<p class="per_page clear">
  View: <% delimited_items([5, 10, 20, 50]) do |count, comma| -%>
    <%= link_to count, popular_url(:limit => count), :class => ((params[:limit] || 10).to_i == count) ? "pp_current" : nil -%><%= comma -%>
  <% end -%>
  per page
</p>