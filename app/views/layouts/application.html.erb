<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
<title>
  <%= "#{@title} - " if @title -%> LimeCast
</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<meta name="description" content="Coming 2009 March"/>

<% if @podcast -%>
  <link rel="shortcut icon" type="image/png" href="<%= @podcast.logo.url(:icon) -%>" />
  <link rel="icon" type="image/png" href="<%= @podcast.logo.url(:icon) -%>" />
<% end -%>

<% (@feeds || []).each do |feed| %>
  <%= rss_link(feed) -%>
<% end %>

<%= stylesheet_link_tag 'base', 'application' -%>

<%= javascript_include_tag 'jquery' -%>
<%= javascript_include_tag 'jquery-periodic' -%>
<%= javascript_include_tag 'jquery.reflect' -%>
<%= javascript_include_tag 'test_helpers' -%>
<script type="text/javascript">
  $.ajaxSetup({
    'beforeSend': function(xhr) {xhr.setRequestHeader("Accept", "text/javascript")}
  })

  <% if protect_against_forgery? -%>
  AUTH_TOKEN = "<%= form_authenticity_token -%>";
  <% end -%>
  LOGGED_IN  = <%= !!logged_in? %>;
</script>

<%= javascript_include_tag 'default_input_text_helper' %>
<%= javascript_include_tag 'quick_sign_in' %>
<%= javascript_include_tag 'review_ratings' %>
<%= javascript_include_tag 'restful_delete' %>
<%= javascript_include_tag 'super_button' %>
<%= javascript_include_tag @javascript_includes if @javascript_includes -%>

<%= javascript_include_tag 'application' -%>

</head>

<body class="<%= " status_#@error" if @error %>">

<div id="document">
  <div id="layout">

    <div id="header_wrapper">
      <div id="header">
        <div id="title">
            <% if current_page?(all_url) -%>
              <span><%= image_tag("icons/lime_sm.png", :class => "inline_icon") + "LimeCast" %></span>
            <% else -%>
              <%= link_to_with_icon("LimeCast", :lime_sm, all_url) %>
            <% end -%>
            Alpha
        </div>
        <div class="add_podcast">
        <% if current_page?('/add') -%>
          <span><img src="/images/icons/add.png" class="inline_icon" />Add podcast</span>
        <% else -%>
          <%= link_to_with_icon "Add podcast", :add, add_podcast_path %>
        <% end -%>
        </div>
        <div id="account_bar">
          <ul>
            <li class="search">
              <% form_for :search, :url => search_url, :html => {:method => :get } do |form| -%>
                <label for="q" class="default search">Search...</label>
                <%= text_field_tag "q", params[:q], :size => 15, :class => "text search" %>
                <%= submit_tag 'Search', :type => 'image', :src => '/images/content/button_search.png', :class => 'image_button' %>
              <% end -%>
            </li>
            <% if current_user -%>
            <li class="user">
              <%= link_to_profile current_user -%>
            </li>
            <% else -%>
            <li class="signup">
              <%= link_to_with_icon "Sign up or sign in", :user, new_session_url -%>
            </li>
            <% end -%>
          </ul>
          <% unless current_user -%>
            <%= render :partial => 'users/quick_signin', :locals => { :options => { :top_bar => true, :suffix => "global" } }  -%>
          <% end -%>
        </div>
      </div>
    </div>

    <div id="body_wrapper">
      <div id="body">
        <% if @full_width %>

          <div id="full_width">
            <%= yield -%>
          </div>

        <% else %>

          <div id="sidebar">
            <%= @ads if @show_ads -%>
          </div>
          
          <div id="primary">
            <% if flash[:notice] -%>
              <span id="notice">
                <% if Array === flash[:notice] -%>
                  <%= flash[:notice].map{|line| "<p>#{line}</p>"} -%>
                <% else -%>
                  <%= flash[:notice] -%>
                <% end -%>
              </span>
            <% end -%>
            
            <%= yield -%>
          </div>

        <% end -%>
      <div style="clear:both;">&nbsp;</div>

      </div>
    </div>
  </div>
</div>

<div id="footer_wrapper">
  <div id="footer" class="clearfix">

    <ul class="primary">
      <li class="blog">
        <%= link_to "<span>Blog</span>", 'http://limecast.limespot.com/' %>
      </li>
      <li class="use">
        <%= link_to "<span>Terms of use</span>", use_url %>
      </li>
      <li class="privacy">
        <%= link_to "<span>Privacy</span>", '/privacy' %>
      </li>
      <li class="opensource">
        <%= link_to "<span>Open source</span>", "http://wiki.limewire.org/index.php?title=LimeCast" %>
      </li>
    </ul>

  </div>
</div>

<%= @tracker -%>

</body>
</html>
