<div id="s_reviews" class="rounded_corners">
  <% rounded_corners do -%>
    <div id="r_view">
      <p><span id="first_linkable">View:</span>
        <span class="linkable current">
          <%= link_to "All (#{reviews.count})", reviews_url(:podcast => podcast), :rel => "all" %>
          <span>All (<%= reviews.count -%>)</span>
        </span>
        <span class="linkable">
          <%= link_to "Positive (#{reviews.that_are_positive.count})", positive_reviews_url(:podcast => podcast), :class => "positive", :rel => "positive" %>
          <span class="positive">Positive (<%= reviews.that_are_positive.count -%>)</span>
        </span>
        <span class="linkable">
          <%= link_to "Negative (#{reviews.that_are_negative.count})", negative_reviews_url(:podcast => podcast), :class => "negative", :rel => "negative" %>
          <span class="negative">Negative (<%= reviews.that_are_negative.count -%>)</span>
        </span>
      </p>
    </div>
    <ul class="reviews">
      <%= render :partial => 'reviews/review', :collection => reviews -%>
    </ul>
    <div id="review_login" style="display: none;">
      <h4>Login or register to add a comment</h4>
      <p><a href="#"><strong>Join now by creating an account</strong></a> or <a href="#"><strong>sign in</strong></a> to review this series.</p>
    </div>
    <div id="review_doit">
      <h4>Review this series</h4>
      <p>Mark as:            Positive            Negative</p>
    </div>
  <% end -%>
</div><!-- /s_reviews -->

<!-- some stuff from orig design, not sure if it's still going to be used yet //-->
