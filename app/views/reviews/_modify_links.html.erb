<% review = modify_links -%>
<% if review.writable_by?(current_user) %>
  <%= link_to 'Edit', edit_review_url(:podcast_slug => review.episode.podcast.to_param, :id => review), :class => 'edit' -%>
  <%= link_to 'Delete', review_url(:podcast_slug => review.episode.podcast.to_param, :id => review),    :class => 'delete', 'style' => 'display: none;' -%>
<% end %>
