<% options ||= {} -%>

<% form_for review, 
            :url => (review.new_record? ? reviews_url(:podcast_slug => podcast) : review_url(:podcast_slug => podcast, :id => review)), 
            :html => {:class => "review_form"} do |f| -%>
  <%= f.hidden_field :episode_id -%>

  <p>
    <%= f.label :positive_true, "Positive", :class => 'positive' %>
    <%= f.radio_button :positive, true, :class => 'radio', :checked => "checked" -%>

    <%= f.label :positive_false, "Negative", :class => 'negative' %>
    <%= f.radio_button :positive, false, :class => 'radio' -%>

    <%= f.label :title, "Heading" %><br />
    <%= f.text_field :title, :size => 50 -%>

    <%= f.label :body, "Your review of #{h podcast.title}" %><br />
    <%= f.text_area :body, :rows => 4, :cols => 50 -%>
  </p>
  
  <button type="submit">Save</button>
  
  <a href="#" class="cluetip_review_link" onclick="return false;" rel=".login_pop" style="visibility: hidden;"><!-- //--></a>

  <%= link_to "cancel", "#", :class => 'cancel' if options[:cancel] -%>
<% end -%>
