<% podcast = description -%>
<% is_first ||= false -%>

<div class="podcast_block" <%= 'id="first_featured"' if is_first %>>

  <div class="preview">
    <%= image_tag(podcast.logo.url(:small), :alt => "#{podcast.custom_title} cover art", :class => "logo") -%>
  </div>
  
  <div class="description">
    <h3><%= link_to podcast.title, podcast_url(:podcast_slug => podcast), :title => "Subscribe to the series & view the episode list" -%></h3>
    <p>
      <%= unescape_entities h(podcast.description) -%>
    </p>
    <%= render :partial => "podcasts/social_favs", :locals => {:podcast => @podcast} -%>


  </div> <!-- /description -->
</div> <!-- /description -->

